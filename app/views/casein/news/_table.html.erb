<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= casein_sort_link "Title", :title %></th>
      <th><%= casein_sort_link "Body", :body %></th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <% news.each do |news| %>
    <tr>
      <td><%= casein_table_cell_link news.title, casein_news_path(news) %></td>
      <td><%= casein_table_cell_link news.body, casein_news_path(news) %></td>
      <td class="delete">
        <%= link_to(casein_show_row_icon("trash"), casein_news_path(news), method: :delete, data: { confirm: "Are you sure you want to delete this news?" }) %>
      </td>
    </tr>
  <% end %>
</table>
